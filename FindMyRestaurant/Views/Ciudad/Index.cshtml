@model FindMyRestaurant.Models.Ciudad

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Ciudad</h2>
<p>
    @Html.ActionLink("Nuevo", "New")
</p>
<table class="table">
    <tr>
        <th>
            Nombre :
        </th>
       

        <th></th>
    </tr>
    @foreach (var item in new FindMyRestaurant.Models.Ciudad().SelectCiudades())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
          
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
