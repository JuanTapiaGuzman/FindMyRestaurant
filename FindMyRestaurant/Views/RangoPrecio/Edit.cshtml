@model FindMyRestaurant.Models.ViewModels.RangoPrecioViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Rango de Precios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Editar Rangos
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "RangoPrecio", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Nombre:</label>
                                @Html.TextBoxFor(m => m.Nombre , null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Mayor Precio</label>
                                @Html.TextBoxFor(m => m.PrecioMayor, null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Precio medio</label>
                                @Html.TextBoxFor(m => m.PrecioMedio, null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Precio Menor</label>
                                @Html.TextBoxFor(m => m.PrecioMenor, null, new { @class = "form-control" })
                            </div>
                            

                            <div class="form-group">
                                <button type="submit">Guardar</button>
                                @Html.ActionLink("Cancelar","Index")
                            </div>

                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
