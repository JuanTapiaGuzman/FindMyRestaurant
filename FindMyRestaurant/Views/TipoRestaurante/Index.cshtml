@model FindMyRestaurant.Models.TipoRestaurante

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipos de Restaurantes </h2>

<p>
    @Html.ActionLink("Nuevo", "New")
</p>
<table class="table">
    <tr>
        <th>
           Nombre
        </th>
        <th>
           Especialidad
        </th>
     
        <th></th>
    </tr>

        @foreach (var item in new FindMyRestaurant.Models.TipoRestaurante().SelectTipoRestaurantes())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
