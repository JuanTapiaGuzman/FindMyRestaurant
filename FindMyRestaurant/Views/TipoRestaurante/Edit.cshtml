@model FindMyRestaurant.Models.ViewModels.TipoRestauranteViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tipos de Restaurantes</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nuevo Tipo
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "TipoRestaurante", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Nombre:</label>
                                @Html.TextBoxFor(m => m.Nombre, null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Especialidad:</label>
                                @Html.TextBoxFor(m => m.Especialidad, null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <button type="submit">Guardar</button>
                                @Html.ActionLink("Cancelar", "Index")
                            </div>

                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
