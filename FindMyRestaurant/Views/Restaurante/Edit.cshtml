@model FindMyRestaurant.Models.ViewModels.RestauranteViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Restaurantes</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Editar Restaurante
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "Restaurante", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Nombre:</label>
                                @Html.TextBoxFor(m => m.Nombre, null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Tipo de Restaurante: </label>
                                <select class="form-control input-xlarge" name="IdTipoRestaurante">
                                    @foreach (var obj in ViewBag.TipoRestaurantes)
                                    {
                                        if (obj.Selected)
                                        {
                                            <option selected value="@obj.Value"> @obj.Text </option>
                                        }
                                        else
                                        {
                                            <option value="@obj.Value"> @obj.Text </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Valoración: </label>
                                @Html.TextBoxFor(m => m.Valoracion, null, new { @class = "form-control", @type = "number" })
                            </div>
                            <div class="form-group">
                                <label>Rango de Precio:</label>
                                <select class="form-control input-xlarge" name="IdRangoPrecio">
                                    @foreach (var obj in ViewBag.RangoPrecios)
                                    {
                                        if (obj.Selected)
                                        {
                                            <option selected value="@obj.Value"> @obj.Text </option>
                                        }
                                        else
                                        {
                                            <option value="@obj.Value"> @obj.Text </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Dirección:</label>
                                @Html.TextBoxFor(m => m.Direccion, null, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Ciudad: </label>
                                <select class="form-control input-xlarge" name="IdCiudad">
                                    @foreach (var obj in ViewBag.Ciudades)
                                    {
                                        if (obj.Selected)
                                        {
                                            <option selected value="@obj.Value"> @obj.Text </option>
                                        }
                                        else
                                        {
                                            <option value="@obj.Value"> @obj.Text </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Telefono:</label>
                                @Html.TextBoxFor(m => m.Telefono, null, new { @class = "form-control", @placeholder = "999-999-9999", @data_mask = "999-999-9999" })
                            </div>
                            <div class="form-group">
                                <label>Latitud:</label>
                                @Html.TextBoxFor(m => m.LatitudGps, null, new { @class = "form-control", @type = "number" })
                            </div>
                            <div class="form-group">
                                <label>Longitud:</label>
                                @Html.TextBoxFor(m => m.LongitudGps, null, new { @class = "form-control", @type = "number" })
                            </div>

                            <div class="form-group">
                                <button type="submit">Guardar</button>
                                @Html.ActionLink("Cancelar", "Index")
                            </div>

                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@*@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}*@